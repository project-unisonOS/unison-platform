# Unison Platform Production Environment Template
# Copy this file to .env.prod and update with your values

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=unison_identity
DB_USER=unison
# DB_PASSWORD is loaded from secrets/db_password.txt

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD is loaded from secrets/redis_password.txt

# Vault Configuration
VAULT_ADDR=http://vault:8200
VAULT_PORT=8200
# VAULT_TOKEN is loaded from secrets/vault_token.txt

# Identity Service Configuration
IDENTITY_PORT=8095
IDENTITY_HOST=unison-identity
# JWT_SIGNING_KEY is loaded from secrets/jwt_signing_key.txt
JWT_TTL=300
JWT_ISSUER=unison-identity
JWT_AUDIENCE=unison-platform

# Consent Service Configuration
CONSENT_PORT=8096
CONSENT_HOST=unison-consent
POLICY_ENGINE_URL=http://policy-service:8083
NOTIFICATION_SERVICE_URL=http://notification-service:8084

# Connector Broker Configuration
CONNECTOR_BROKER_PORT=8097
CONNECTOR_BROKER_HOST=unison-connector-broker

# MCP Proxy Configuration
MCP_PROXY_PORT=8098
MCP_PROXY_HOST=unison-mcp-proxy

# External Service Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_ENVIRONMENT=sandbox

FIGMA_CLIENT_ID=your_figma_client_id
FIGMA_CLIENT_SECRET=your_figma_client_secret

VENMO_CLIENT_ID=your_venmo_client_id
VENMO_CLIENT_SECRET=your_venmo_client_secret

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
CORS_ORIGINS=https://unisonos.org,https://app.unisonos.org
ALLOWED_HOSTS=unisonos.org,app.unisonos.org

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=unison-backups
BACKUP_S3_REGION=us-east-1

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/certs/unisonos.org.crt
SSL_KEY_PATH=/etc/nginx/certs/unisonos.org.key
SSL_ENABLED=true

# Admin Configuration
ADMIN_EMAIL=admin@unisonos.org
ADMIN_USERNAME=admin
# ADMIN_PASSWORD is loaded from secrets/admin_password.txt

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_DEBUG_MODE=false
ENABLE_PERFORMANCE_MONITORING=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Session Configuration
SESSION_TIMEOUT=3600
SESSION_SECRET=your_session_secret_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@unisonos.org
SMTP_PASSWORD=your_smtp_password
SMTP_TLS=true

# Analytics Configuration
ANALYTICS_ENABLED=false
ANALYTICS_ENDPOINT=https://analytics.unisonos.org
ANALYTICS_API_KEY=your_analytics_api_key
